@inherits LayoutComponentBase

<div class="customer-layout">
    <!-- Header -->
    <HeaderCustomer />

    <!-- Main content -->
    <div class="main-container">
        <!-- Menu trái -->
        <NavMenu />

        <!-- Nội dung page sẽ render vào đây -->
        <main class="content">
            @Body
        </main>
    </div>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-left">
            <p>&copy; 2025 SmartBookStore</p>
            <p>Email: support@smartbookstore.com | Hotline: 0123 456 789</p>
        </div>
        <div class="footer-links">
            <a href="/customer/trangchu">Trang chủ</a>
            <a href="/customer/sach">Danh mục sách</a>
            <a href="/customer/hotro">Hỗ trợ</a>
        </div>
    </footer>
</div>
<style>
    /* Container chính */
    .main-container {
        display: flex; /* Đặt NavMenu và Content nằm ngang */
        flex: 1;
        min-height: calc(100vh - 120px); /* trừ header + footer */
    }

    /* Menu trái */
    nav {
        width: 250px; /* cố định chiều rộng */
        flex-shrink: 0;
    }

    /* Nội dung bên phải */
    .content {
        flex: 1; /* chiếm toàn bộ khoảng trống còn lại */
        padding: 20px 30px;
        background: var(--bg);
        overflow-y: auto;
    }
</style>
