

@page "/"
@inject NavigationManager Navigation
@using SmartBookStore.Core

@code {
    private bool hasRedirected = false;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && !hasRedirected)
        {
            hasRedirected = true;

            if (string.IsNullOrEmpty(SmartBookStore.Core.CurrentUser.Email))
            {
                Navigation.NavigateTo("/home");
            }
            // Nếu đăng nhập là Admin (VaiTro == 1) → về Admin Home
            else if (CurrentUser.VaiTro == 1)
            {
                Navigation.NavigateTo("/admin/home");
            }
            // Nếu đăng nhập là Customer → về Customer Home
            else
            {
                Navigation.NavigateTo("/customer/trangchu");
            }
        }
    }
}

